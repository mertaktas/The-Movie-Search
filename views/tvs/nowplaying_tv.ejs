<% include ../partials/header %>

<div class="container my-4">
    <div class="row ">
        <% if (source == null) { %>
        <p>No results. Please try refining your search terms.</p>
        <% } else { %>
        <% source["results"].forEach(function(movie) { %>
        <div class="mb-4 list-group col-6 list-group">
            <div class="row mb-4 list-group-item-action align-items-start">
                <div class="col-5  d-inline-block pt-2">
                    <img style="height: 100%; width: 100%;" src="<%= img + movie.poster_path %>" alt="Card image">
                </div>
                <div class="col-7">
                    <div class="card-header">
                        <h4><strong><%= movie.original_name %></strong></h4>
                        <hr>
                        <small style="font-size:1rem;"><i><%= movie.first_air_date %></i></small>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Populerlik : <%= movie.popularity %></h5>
                        <p class="card-text">Konusu : <%= movie.overview.substring(0, 140) %>...</p>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>
        <% } %>
    </div>
</div>

<% include ../partials/footer %>
<% include ../partials/header %>

<div class="container my-4">
    <div class="row">
        <% source["results"].forEach(function(mov){ %>

        <div class="mb-4 col-6" style="width: 100%;">
            <div class="row">
                <div class="col-4">
                    <img style="height: 240px; width: 100%;" src="<%= img + mov.poster_path %>" alt="Card image">
                </div>

                <div class="col-8 mb-4">
                    <h3 class="card-header"><%= mov.title %></h3>
                    <div class="card-body">
                        <h5 class="card-title">Populerlik : <%= mov.popularity %></h5>
                        <p class="card-text">Açıklama : <%= mov.overview.substring(0, 140) %>...</p>

                    </div>
                    <div class="card-footer text-muted">
                        2 days ago
                    </div>
                </div>
            </div>
        </div>

        <% }); %>
    </div>
</div>


<% include ../partials/footer %>